
if site.posts.length > 0
  #recent-posts
    each post in page.posts.sort('date', -1).toArray()
      .recent-post-item
        div.clearfix
          a.pull-left(href=config.root + post.path)= post.title
          if post.date
            time.pull-right(datetime=post.date.toJSON())= date(post.date, date_format)
        if post.subtitle
          div.subtitle= post.subtitle
